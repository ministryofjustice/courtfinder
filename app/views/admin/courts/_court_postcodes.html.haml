= form_for [:admin, court], url: admin_court_path(court, redirect_url: redirect_url), html: { class: 'js-postcode-tag-form' } do |f|
  - if court.errors.any?
    #error_explanation
      %ul
        - court.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :name
  = f.text_area :postcode_list, class: 'postcode js-tags'
  = f.submit 'Save', class: 'button right'
  = link_to 'Move', edit_admin_postcode_path(court.id), :class => 'button'
