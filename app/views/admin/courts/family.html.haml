= content_for :title, 'Manage all courts and tribunals'
%p
  Courts: #{Court.count}
%p
  Family courts: #{@courts.count}

= render 'court_nav'

%div
  %div
    %h3 Family courts
    - family_areas_of_law do |area, id|
      - if (unassigned = Council.unassigned_for_area_of_law(id)).count > 0
        .warning
          %strong Warning:
          = "#{unassigned.count} councils do not currently have a family court that deals with #{area.downcase} attached "
          %a{ data: { expand: true } } view list
          .list
            %ul
              - unassigned.each do |council|
                %li= council.name

    %p.sub-list
      View:
      - family_areas_of_law do |area, id|
        = link_to "#{area} (#{@courts.by_area_of_law(area).count})", family_admin_courts_path(area_of_law_id: id), data: { disabled: (id == @area_of_law.id) }

    %table#js-council-tbl
      %thead
        %tr
          %th
            Court no.
          %th
            Court name
          %th
            Councils
      %tbody
        - @courts.by_area_of_law(@area_of_law.name).each do |court|
          %tr{ class: cycle('even', 'odd') }
            %td
              = court.court_number
            %td
              = link_to(court.name, court)
            %td
              = render "court_councils", court: court, area_of_law: @area_of_law


.pagination-row.cf
  .page-entries
    = page_entries_info @courts
  = will_paginate @courts
