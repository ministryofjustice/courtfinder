= simple_form_for([:admin, @council], html: { multipart: true }) do |f|
  - if @council.errors.any?
    #error_explanation
      %h2
        = pluralize(@council.errors.count, "error")
        prohibited this council from being saved:
      %ul
        - @council.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name

  .form-actions.cf
    = link_to 'View Council', @council, class: 'button button-secondary', target: '_blank'
    = f.button :submit, class: 'right'


