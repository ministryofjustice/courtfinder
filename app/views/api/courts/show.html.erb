<div id='court-info'>
  <h1><%= @court.name %></h1>
  <% address = @court.addresses.first %>
  <div id='address'>
    <h4>Address</h4>
    <% if address.address_line_1 %><span><%= address.address_line_1 %></span><% end %>
    <% if address.address_line_2 %><span><%= address.address_line_2 %></span><% end %>
    <% if address.address_line_3 %><span><%= address.address_line_3 %></span><% end %>
    <% if address.address_line_4 %><span><%= address.address_line_4 %></span><% end %>
    <% if address.postcode %><span><%= address.postcode %></span><% end %>
    <% if address.dx %><span><%= address.dx %></span><% end %>
    <span><%= link_to 'View full court details', @court %></span>
  </div>
  <div id='areas-of-law'>
    <h4>Areas of law covered</h4>
    <% areas = [] %>
    <% @court.areas_of_law.each_with_index { |area, i| areas.push(i > 0 ? area.name.downcase : area.name) } %>
    <% areas.each do |area| %>
      <span><%= area %></span>
    <% end %>
  </div>
  <%= gmaps({"markers" => {"data" => @court.to_gmaps4rails}, "map_options" => {"auto_zoom" => false, "zoom" => 15} }) %>
</div>