<%= form_for @feedback, :url => feedback_path, :html => {:novalidate => 'novalidate'} do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited your feedback from being sent:</h2>
      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Rate the court and tribunal finder web service</legend>
    <%= f.radio_button :rating, "5" %>
    <%= f.label :rating, "Very good", :value=>"5", :class=>"radio" %>
    <%= f.radio_button :rating, "4" %>
    <%= f.label :rating, "Good", :value=>"4", :class=>"radio" %>
    <%= f.radio_button :rating, "3" %>
    <%= f.label :rating, "Unsure", :value=>"3", :class=>"radio" %>
    <%= f.radio_button :rating, "2" %>
    <%= f.label :rating, "Bad", :value=>"2", :class=>"radio" %>
    <%= f.radio_button :rating, "1" %>
    <%= f.label :rating, "Very bad", :value=>"1", :class=>"radio" %>
    <div>
    <br/>
    <%= f.label :text, "Comments (Please don't leave sensitive personal details, like your phone number)" %>
    <%= f.text_area :text, :cols => 50, :rows => 5 %>
    <br/><span class="char-limit">2000 characters max</span>
    </div>
    <div>
      <label for="feedback_email">Your email address (optional) - if you'd like us to contact you for more feedback</label>
      <br/><%= f.email_field :email %>
    </div>
       <div> 
      <p>
      Please do not use this feedback form for complaints about HM Courts & Tribunals Service. <a href="http://hmctsformfinder.justice.gov.uk/courtfinder/forms/ex343-eng.pdf">Complaints</a> should be sent to the office where the problem arose to help us sort out the issue quickly and accurately.
      </p>
      <p>
      If your feedback is about your case please contact the court or tribunal dealing with it.
      </p>
      <input type ="hidden" name="referrer" value="<%= params[:referrer] %>" />
      <%= f.submit "Send", :class => "button", :id => "submit-button" %>
    </div>
  </fieldset>
<% end %>
